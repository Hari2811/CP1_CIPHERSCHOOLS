#include<iostream>
using namespace std;
int main(){
	int n;
	cout<<"Enter depth of Pyramid";
	cin>>n;
	for(int i=0;i<n;i++){
		for(int j=0;j<=i;j++){
			cout<<"*";
		}
    /*
    *
    **
    ***
    ****
    *****
    */
		cout<<endl;
	}
	cout<<endl;
	for(int i=n;i>0;i--){
		for(int j=i;j>0;j--){
			cout<<"*";
		}
		cout<<endl;
	}
  /*
  *****
  ****
  ***
  **
  *
  */
  
	int s=n;
	for(int i=0;i<n;i++){
		for(int i=s-1;i>0;i--){
			cout<<" ";
		}
		for(int k=0;k<=i;k++){
			cout<<"*";
		}
		cout<<endl;
		s--;
	}
  /*
      *
     **
    ***
   ****
  *****
  */
  
	return 0;
}
